#!/bin/bash

# If you have a very old Java version, maybe the -Xlint:deprecation option is not recognized

# Here we check if the user has chosen a compilation which should include the Macintosh
# extensions

unamestr=`uname`

if [ "$unamestr" = 'Darwin' ]||[ "$1" = "mac" ]; then
  echo "MacOSX detected: activated AppleSpecific classes."
  javac  -g -Xlint:unchecked -O -sourcepath src -classpath bin -source 1.5 -target 1.5 ./src/AppleSpecific.java -d bin
fi 


# compile FidoCadJ
javac  -g -Xlint:unchecked -O -sourcepath src -classpath bin -source 1.5 -target 1.5 ./src/FidoMain.java -d bin

# compile FidoReadJ applet
javac  -g -Xlint:unchecked -O -sourcepath src -classpath bin -source 1.5 -target 1.5 ./src/FidoReadApplet.java -d bin

# compile FidoCadJ applet
javac  -Xlint:unchecked -g -O -sourcepath src -classpath bin -source 1.5 -target 1.5 ./src/FidoCadApplet.java -d bin


